{% block content %}
	<section class="formSection">
		<form method="post" enctype="multipart/form-data">
			<h2>Edit user
				{{ user.nickName }}</h2>

			<div class="userPic" id="imageHolder">
				<img src="/../assets/images/profile/{{ user.avatar }}" alt="Avatar" class="userPic" id="avatar-src">
			</div>

			<input type="hidden" value={{user.id}} name="id" id="id" placeholder="id">
			<input type="hidden" value={{user.score}} name="score" id="score" placeholder="score">

			<label for="firstName" display="hidden" required></label>
			<input type="text" value="{{user.firstName}}" name="firstName" id="firstName" placeholder="Prenom">

			<label for="lastName" display="hidden" required></label>
			<input type="text" value="{{user.lastName}}" name="lastName" id="lastName" placeholder="Nom">

			<label for="nickName" display="hidden" required></label>
			<input type="text" value="{{user.nickName}}" name="nickName" id="nickName" placeholder="Nickname">

			<label for="email" display="hidden" required></label>
			<input type="text" value="{{user.email}}" name="email" id="email" placeholder="Email">

			<label for="avatar"></label>
			<input id="avatar" name="avatar" type="file" value={{user.avatar}} accept="image/*" onchange="showPreview(event);"/>

			<label for="description" display="hidden" required></label>
			<input type="text" value="{{user.description}}" name="description" id="description" placeholder="Description">

			<div class="modalButtons">
				<button class="redButton">Enregistrer</button><br>
				<button onclick="location.href='/users/show?id={{ user.id }}'" type="button" class="cancelButton">Retour</button>
			</div>
		</form>
	</section>
{% endblock %}
