{% extends 'layout.html.twig' %}

{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" href="/assets/css/show.css">
  <link rel="stylesheet" href="/assets/css/userForm.css">
{% endblock %}

{% block content %}

<aside id="id01" class="modal">
  	<span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">√ó</span>
  	<section class="formSection formSectionModale">
 
      <h1>Delete Account</h1>
      <h2>Are you sure you want to delete your account {{user.nickName}}?</h2>

      <div class="clearfix" style="display: flex;">
        <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelButton">Cancel</button>
        <a class="redButton" href="delete?id={{ user.id }}">Delete</a>
      </div>

	</section>

</aside>

<section class="top">

	<div class="left-top">
	<img src="/../assets/images/profile/{{ user.avatar }}" alt="Avatar" class="userPic">
	</div>

	<div class="right-top">
		<div class="rank">ü•á 1st</div>
		<div class="points">{{ user.score }} Points</div>
	</div>

</section>

<section class="bottomSection">

  <h2>My Details <a href="/users/edit?id={{ user.id }}" style="font-size: 20px;">‚úèÔ∏è</a></h2>

	<table>
        <tr>
          <td>First Name</td>
          <td>{{ user.firstName }}</td>
        </tr>
        <tr>
          <td>Last Name</td>
          <td>{{ user.lastName }}</td>
        </tr>
        <tr>
          <td>Nickname</td>
          <td>{{ user.nickName }}</td>
        </tr>
        <tr>
          <td>Email</td>
          <td>{{ user.email }}</td>
        </tr>
        <tr>
          <td>Description</td>
          <td>{{ user.description }}</td>
        </tr>


    </table>

</section>

<div>

	<a href="#" onclick="document.getElementById('id01').style.display='block'">Supprimer mon profil</a>
	<a href="/users">Retour</a>

</div>


{% endblock %}


{% block javascript %}
<script type="application/javascript" src="/assets/js/confirmModale.js"></script>
{% endblock %}