{% extends 'layout.html.twig' %}

{% block content %}
	<h1>Players</h1>
	<ul>
		{% for user in users %}
			<li>
				<a href="/users/show?id={{ user.id }}">
					{{ user.id }}
					{{ user.name }}

					{{ user.description }}
					{{ user.score }}</a>
			</li>
		{% else %}
			<li>Nothing to display</li>
		{% endfor %}
	</ul>
	<a href="/users/add">Ajouter</a>
{% endblock %}
