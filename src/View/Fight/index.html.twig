{% extends 'layout.html.twig' %}

{% block title %}Combat
{% endblock %}

{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="/assets/css/fight.css"/>
  <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
{% endblock %}

{% block content %}
    <main>
        <div class="choose_fighter">
            <p>Choisis ton adversaire!</p>
        </div>

        <table>
			<tr>
				<th></th>
				<th>Rang</th>
				<th>Pseudo</th>
				<th>Points</th>
			</tr>
			{% set rank = 1 %}
			{% for user in users %}
				<tr>
					<td><img src="/assets/images/profile/{{user.avatar}}"/></td>
					<td>{{rank}}</td>
					<td class="left-justify">{{user.nickName}}</td>
					<td class="right-justify">{{user.score}}</td>
				</tr>
				{% set rank =  rank + 1  %}
			{% endfor %}
		</table>

        <button class="goFight"style="button"> Lancer le combat ! </button>
        
    </main>
{% endblock %}