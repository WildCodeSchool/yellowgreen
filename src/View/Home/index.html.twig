{% extends 'layout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="/assets/css/userForm.css">
{% endblock %}

{% block content %}
	<h1>Hello Player !</h1>
	<p>Find a complete CRUD example on
		<a href="/users">/users</a>

	<button class="redButton" data-modal="modalOne">Je veux jouer!</button>

    <div id="modalOne" class="modal">
      <div class="modal-content">
        <div class="contact-form">

		  	<a class="close">&times;</a>

			{% include 'User/_addUserForm.html.twig' %}

		</div>

      </div>
    </div>

{% endblock %}

{% block javascript %}
<script type="application/javascript" src="/assets/js/formModale.js"></script>
<script>
      let modalBtns = [...document.querySelectorAll(".redButton")];
      modalBtns.forEach(function (btn) {
        btn.onclick = function () {
          let modal = btn.getAttribute("data-modal");
          document.getElementById(modal).style.display = "block";
        };
      });
      let closeBtns = [...document.querySelectorAll(".close")];
      closeBtns.forEach(function (btn) {
        btn.onclick = function () {
          let modal = btn.closest(".modal");
          modal.style.display = "none";
        };
      });
      window.onclick = function (event) {
        if (event.target.className === "modal") {
          event.target.style.display = "none";
        }
      };
    </script>
    {% endblock %}